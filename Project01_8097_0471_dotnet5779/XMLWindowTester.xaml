<Window x:Class="PL.XMLWindowTester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        FontSize="30"
        Title="XMLWindowTester" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddTester" Content="הוסף בוחן" Click="AddTester_Click"/>
        <Button x:Name="UpdateTester" Content="עדכן בוחן"
                Grid.Row="1" Click="UpdateTester_Click"/>
        <Button x:Name="DeleteTester" Content="מחק בוחן"
            Grid.Row="2" Click="DeleteTester_Click"/>
    </Grid>
</Window>
