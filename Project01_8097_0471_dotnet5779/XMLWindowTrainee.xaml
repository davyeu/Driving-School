<Window x:Class="PL.XMLWindowTrainee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
      FontSize="30"
        Title="XMLWindowTrainee" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddTrainee" Content="הוסף תלמיד  " Click="AddTrainee_Click" />
        <Button x:Name="UpdateTrainne" Content="עדכן תלמיד"
                Grid.Row="1" Click="UpdateTrainne_Click"/>
        <Button x:Name="DeleteTrainne" Content=" מחק תלמיד "
            Grid.Row="2" Click="DeleteTrainne_Click" />
    </Grid>
</Window>
